<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd" caption="msg://caption"
        class="com.haulmont.thesis.crm.web.companyVerifiedState.CompanyVerifiedStateMessage"
        messagesPack="com.haulmont.thesis.crm.web.companyVerifiedState">
    <layout expand="buttonsPanel" height="100%" spacing="true" width="100%">
        <hbox id="commentBox" spacing="true" width="100%">
            <textArea id="comment" inputPrompt="Обязательно для заполнения при выборе статуса: Не проверить."   width="100%"/>
        </hbox>
        <buttonsPanel id="buttonsPanel" align="MIDDLE_LEFT" width="100%">
            <button id="approvedButton" caption="Проверено" invoke="approved" width="100%" stylename="friendly"/>
            <button id="notApprovedButton" caption="Не проверить" invoke="notApproved" width="100%" stylename="danger"/>
        </buttonsPanel>
    </layout>
</window>
