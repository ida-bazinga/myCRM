<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd" caption="msg://editorCaption" class="com.haulmont.thesis.crm.web.invDoc.InvDocEditor"
        datasource="cardDs" messagesPack="com.haulmont.thesis.crm.web.invDoc">
    <dsContext>
        <datasource id="cardDs" class="com.haulmont.thesis.crm.entity.InvDoc" view="edit">
            <collectionDatasource id="cardProcDs" property="procs"/>
            <collectionDatasource id="cardRolesDs" property="roles"/>
            <collectionDatasource id="cardProjectsDs" property="projects"/>
            <collectionDatasource id="detailsDs" property="invoiceDetails"/>
            <collectionDatasource id="invDocBugetDetailsDs" property="invDocBugetDetail"/>
        </datasource>
        <datasource id="docOfficeDataDs" class="com.haulmont.thesis.core.entity.DocOfficeData" view="edit">
            <collectionDatasource id="docOfficeDataAddresseesDs" property="docOfficeDataAddressees"/>
            <collectionDatasource id="docTransferLogsDs" property="docTransferLogs"/>
        </datasource>
        <hierarchicalDatasource id="attachmentsDs" class="com.haulmont.workflow.core.entity.CardAttachment"
                                datasourceClass="com.haulmont.thesis.web.ui.common.attachments.ThesisAttachmentsDataSource"
                                hierarchyProperty="versionOf" view="card-edit">
            <query>
                <![CDATA[select a from wf$CardAttachment a where a.card.id = :ds$cardDs order by a.createTs desc]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="cardRelationsDs" class="com.haulmont.workflow.core.entity.CardRelation" view="card-relation">
            <query>
                <![CDATA[
                select c from wf$CardRelation c where (c.card.id = :ds$cardDs or c.relatedCard.id = :ds$cardDs)
                ]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="versionsDs" class="com.haulmont.thesis.crm.entity.InvDoc" view="_local">
            <query>
                <![CDATA[select d from crm$InvDoc d where d.versionOf.id = :ds$cardDs order by d.createTs]]>
            </query>
        </collectionDatasource>
        <runtimePropsDatasource id="runtimePropsDs" mainDs="cardDs"/>
        <collectionDatasource id="categoriesDs" class="com.haulmont.cuba.core.entity.Category" view="_local">
            <query>
                <![CDATA[select c from sys$Category c where c.entityType='crm$InvDoc']]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="categoryDs" class="com.haulmont.thesis.core.entity.DocCategory" view="_local">
            <query>
                <![CDATA[select c from df$Category c where c.docType.id = :ds$cardDs.docKind.docType order by c.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="organizationDs" class="com.haulmont.thesis.core.entity.Organization" view="_local">
            <query>
                <![CDATA[select o from df$Organization o order by o.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="taxDs" class="com.haulmont.thesis.crm.entity.Tax" view="_minimal">
            <query>
                <![CDATA[select e from crm$Tax e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="currencyDs" class="com.haulmont.thesis.crm.entity.Currency" view="_local">
            <query>
                <![CDATA[select e from crm$Currency e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="ownerDs" class="com.haulmont.thesis.crm.entity.ExtEmployee" view="with-department-code">
            <query>
                <![CDATA[select e from df$Employee e order by e.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="projectsDs" class="com.haulmont.thesis.crm.entity.ExtProject" view="_minimal">
            <query>
                <![CDATA[select p from crm$Project p where @between(p.deinstallationDatePlan, now-6, now+60, month) and p.isGroup = false and p.name like :(?i)custom$searchString order by p.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="contractDs" class="com.haulmont.thesis.core.entity.Contract" maxResults="100" view="_minimal">
            <query>
                <![CDATA[select e from df$Contract e join wf$Card on df$Contract.card = wf$Card.id join sys$Category on sys$Category.id = wf$Card.category join df$DocKind on df$DocKind.category = sys$Category.id
where df$DocKind.code like 'Memorandum']]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="generalDirectorDs" class="com.haulmont.thesis.crm.entity.ExtEmployee" view="_minimal">
            <query>
                <![CDATA[select e from crm$ProjectTeam p
                left join p.employee e
                where p.extProject.id = :ds$cardDs.project.id
                and (p.signatory=2 or p.signatory=3)]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="chiefAccountDs" class="com.haulmont.thesis.crm.entity.ExtEmployee" view="_minimal">
            <query>
                <![CDATA[select e from crm$ProjectTeam p
                left join p.employee e
                where p.extProject.id = :ds$cardDs.project.id
                and (p.signatory=1 or p.signatory=3)]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="budgetDocDs" class="com.haulmont.thesis.core.entity.SimpleDoc">
            <query>
                <![CDATA[select e from df$SimpleDoc e where e.description like :(?i)custom$searchString and e.docKind.name like "Служебная записка" order by e.description]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="bugetItemsDs" class="com.haulmont.thesis.crm.entity.BugetItem" view="_minimal">
            <query>
                <![CDATA[select e from crm$BugetItem e
                where e.bugetItemType = 2 and e.cfcItem is not null and
                e.id not in (select b.parentBudgetItem from crm$BugetItem b where b.parentBudgetItem is not null)]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="companiesDs" class="com.haulmont.thesis.core.entity.Company" view="_minimal">
            <query>
                <![CDATA[select c from df$Company c where c.name like :(?i)custom$searchString order by c.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="companyAccountDs" class="com.haulmont.thesis.core.entity.ContractorAccount" view="_minimal">
            <query>
                <![CDATA[select c from crm$ExtContractorAccount c where c.contractor.id = :ds$cardDs.company order by c.no]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="departmentDs" class="com.haulmont.thesis.core.entity.Department" view="_minimal">
            <query>
                <![CDATA[select d from crm$Department d where d.economistResponsible is not null and d.organization.id = :ds$cardDs.organization order by d.name]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="expensesProjectsDs" class="com.haulmont.thesis.crm.entity.ExtProject" view="_minimal">
            <query>
                <![CDATA[select p from crm$Project p where @between(p.deinstallationDatePlan, now-6, now+60, month) and p.isGroup = false order by p.name]]>
            </query>
        </collectionDatasource>
