        <collectionDatasource id="invDocBugetDetailsDs" class="com.haulmont.thesis.crm.entity.InvDocBugetDetail" view="browse">
            <query>
                <![CDATA[select e from crm$InvDocBugetDetail e where e.invDoc.id = :ds$cardDs]]>
            </query>
        </collectionDatasource>
        -->
